{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@kitsuine/components": ["../components"],
      "@kitsuine/eva": ["../eva"],
      "@kitsuine/material": ["../material"],
      "@kitsuine/processor": ["../processor"],
      "@kitsuine/eva-icons": ["../eva-icons"],
      "@kitsuine/date-fns": ["../date-fns"],
      "@kitsuine/moment": ["../moment"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../components/**/*.ts",
    "../components/**/*.tsx",
    "../eva/**/*.ts",
    "../material/**/*.ts",
    "../processor/**/*.ts",
    "../eva-icons/**/*.ts",
    "../eva-icons/**/*.tsx",
    "../date-fns/**/*.ts",
    "../moment/**/*.ts"
  ]
}
